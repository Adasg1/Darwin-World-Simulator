<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane minHeight="550.0" minWidth="850.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.oop.model.presenter.SimulationStartPresenter">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>
    <HBox spacing="20">
    <VBox spacing="10">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Konfiguracja symulacji Darwin World" />

        <!-- Wymiary mapy -->
            <Label text="Szerokość mapy:" />
            <TextField fx:id="mapWidthField" promptText="Podaj szerokość" />
            <Label text="Wysokość mapy:" />
            <TextField fx:id="mapHeightField" promptText="Podaj wysokość" />

        <!-- Wariant mapy -->
            <Label text="Wariant mapy:" />
            <ChoiceBox fx:id="mapVariantChoice">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Kula ziemska" />
                        <String fx:value="Pożary" />
                    </FXCollections>
                </items>
            </ChoiceBox>


        <!-- Roślinność -->

            <Label text="Początkowa liczba roślin:" />
            <TextField fx:id="plantStartField" promptText="Podaj liczbę" />
            <Label text="Liczba roślin wyrastających na dzień:" />
            <TextField fx:id="plantDailyField" promptText="Podaj liczbę" />


        <!-- Energia roślin -->

            <Label text="Energia zjedzonej rośliny:" />
            <TextField fx:id="plantEnergyField" promptText="Podaj wartość energii" />


        <!-- Zwierzaki -->

            <Label text="Startowa liczba zwierząt:" />
            <TextField fx:id="animalStartField" promptText="Podaj liczbę" />
            <Label text="Energia startowa zwierząt:" />
            <TextField fx:id="animalStartEnergyField" promptText="Podaj wartość energii" />

    </VBox>
    <VBox spacing="10">
        <!-- Genotyp i mutacje -->

            <Label text="Długość genomu:" />
            <TextField fx:id="animalGenotypeLengthField" promptText="Podaj liczbę" />
            <Label text="Minimalna liczba mutacji:" />
            <TextField fx:id="animalMutationMinimumField" promptText="Podaj wartość" />
            <Label text="Maksymalna liczba mutacji:" />
            <TextField fx:id="animalMutationMaximumField" promptText="Podaj wartość" />


        <!-- Wariant genomu -->

            <Label text="Wariant genomu zwierząt:" />
            <ChoiceBox fx:id="genomeVariantChoice">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Pełna predestynacja" />
                        <String fx:value="Nieco szaleństwa" />
                    </FXCollections>
                </items>
            </ChoiceBox>


        <!-- Pożary -->

            <Label text="Częstotliwość pożarów (w turach):" />
            <TextField fx:id="fireFrequencyField" promptText="Podaj liczbę" />
            <Label text="Czas trwania pożaru (w turach):" />
            <TextField fx:id="burnTimeField" promptText="Podaj liczbę" />



        <!-- Energia zwierząt -->

            <Label text="Energia potrzebna do rozmnażania:" />
            <TextField fx:id="energyAllowingReproductionField" promptText="Podaj wartość" />
            <Label text="Energia dzienna zużywana przez zwierzę:" />
            <TextField fx:id="animalEnergyDailyField" promptText="Podaj wartość" />
            <Label text="Energia rodziców dla potomka:" />
            <TextField fx:id="animalEnergyUsedToReproduceField" promptText="Podaj wartość" />


        <!-- Przycisk startowy -->
        <Button fx:id="startSimulationButton" onAction="#onSimulationStartClicked" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Rozpocznij Symulację" />
    </VBox>
    </HBox>
</GridPane>
